<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorgreenlight"
    android:orientation="vertical">
    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_70sdp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_width="@dimen/_90sdp"
            android:layout_marginLeft="-10dp"
            android:layout_height="@dimen/_90sdp">
            <ImageView
                android:id="@+id/rounded_iv_1"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:scaleType="fitXY"
                tools:ignore="MissingPrefix" />

            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progress_time_pic"
                android:indeterminate="true"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/colorgreenlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_4sdp"
                />


        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <com.mauto.chd.custom_text_view_package.TextViewNormalMedium
                android:id="@+id/user_name"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:text="saravanandfgfgg">

            </com.mauto.chd.custom_text_view_package.TextViewNormalMedium>
            <com.mauto.chd.custom_text_view_package.TextViewNormalMedium
                android:id="@+id/vehicle_numbers"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                android:text="">

            </com.mauto.chd.custom_text_view_package.TextViewNormalMedium>


        </LinearLayout>
        ​
    </LinearLayout>
    ​
    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_10sdp" />
    ​
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="240dp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_height="wrap_content" />
    ​
    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_150sdp" />
    ​
    ​
    <LinearLayout
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/right_curve_bg_menu"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_60sdp">
            ​
            <ImageView
                android:layout_marginTop="@dimen/_3sdp"
                android:gravity="center|end"
                android:layout_gravity="center|end"
                android:layout_marginEnd="@dimen/_5sdp"
                android:src="@drawable/logosidemenu"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp">
                ​
            </ImageView>
        </LinearLayout>

        <ImageView
            android:id="@+id/logouts"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="23dp"
            android:layout_gravity="center|end"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="end"
            android:src="@drawable/logoutwhite">
            ​
        </ImageView>
        ​
        ​
    </LinearLayout>
    ​
</LinearLayout>