<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="top"
    android:gravity="top"
    android:weightSum="2"
    android:background="@color/colorwhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:background="@color/colorwhite"
        android:layout_gravity="top"
        android:gravity="top"
        android:weightSum="2"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_gravity="center|top"
            android:gravity="center|top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_height="wrap_content"
                >



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_weight="2"
                    android:textColor="@color/colorblack"
                    android:text="@string/languageone"
                    android:textSize="@dimen/_19sdp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorlightwhite"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_height="@dimen/_1sdp">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                >



                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:paddingTop="5dp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"

                        android:src="@drawable/language"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        ></ImageView>
                    <LinearLayout
                        android:id="@+id/english_lay"
                        android:layout_weight="2"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="center|left"
                            android:gravity="center|left"
                            android:maxLines="2"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="2"
                            android:ellipsize="end"
                            android:textColor="@color/colorblack"
                            android:text="FranÃ§ais"
                            android:textSize="@dimen/_14sdp"
                            />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/englishchoosen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:gravity="center|left"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="2"
                            android:ellipsize="end"
                            android:textColor="@color/colordarkhint"
                            android:text="@string/choosing_this_app_language_will_be_changed_to_english"
                            android:textSize="@dimen/_14sdp"
                            />
                    </LinearLayout>

                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/gmappostion"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/success"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        ></ImageView>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:background="@color/colorlightwhite"
                    android:layout_height="@dimen/_1sdp"></LinearLayout>


                <LinearLayout
                    android:visibility="gone"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/subject"
                        android:tint="@color/colorblack"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        ></ImageView>
                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:gravity="center|left"
                            android:maxLines="2"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="2"
                            android:ellipsize="end"
                            android:textColor="@color/colorblack"
                            android:text="@string/tamil"
                            android:textSize="@dimen/_14sdp"
                            />

                        <TextView
                            android:id="@+id/tamilchoosen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:gravity="center|left"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="2"
                            android:ellipsize="end"
                            android:textColor="@color/colordarkhint"
                            android:text="@string/choosing_this_app_language_will_be_changed_to_tamil"
                            android:textSize="@dimen/_14sdp"
                            />
                    </LinearLayout>

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/wazepostion"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/success"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        ></ImageView>
                </LinearLayout>
                <LinearLayout
                    android:visibility="invisible"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:background="@color/colorlightwhite"
                    android:layout_height="@dimen/_1sdp"></LinearLayout>


                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:paddingTop="5dp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"

                        android:src="@drawable/language2"

                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        ></ImageView>
                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical"
                        android:id="@+id/french_lay"

                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="center|left"
                            android:gravity="center|left"
                            android:maxLines="2"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="2"
                            android:ellipsize="end"
                            android:textColor="@color/colorblack"
                            android:text="@string/english"
                            android:textSize="@dimen/_14sdp"
                            />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/urduchoosen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:gravity="center|left"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="2"
                            android:ellipsize="end"
                            android:textColor="@color/colordarkhint"
                            android:text="@string/choosing_this_app_language_will_be_changed_to_french"
                            android:textSize="@dimen/_14sdp"
                            />
                    </LinearLayout>

                    <ImageView
                        android:visibility="invisible"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/success"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        ></ImageView>
                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">



                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/cloepageoflanguage"
                        android:layout_weight="1"
                        android:background="@drawable/buttonbackground"
                        android:orientation="horizontal"
                        android:gravity="center|left"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp">
                        <TextView
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:text="@string/languageone"
                            android:textColorHint="@color/theme_gray"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp"
                            android:singleLine="true"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>





            </LinearLayout>

        </LinearLayout>




    </LinearLayout>





</LinearLayout>

