<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/headerLAY"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/newbackground"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logoout"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:padding="@dimen/_11sdp"
                android:src="@drawable/logoutwhite" />

            <TextView
                android:id="@+id/title_document"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:fontFamily="@font/sfuidisplaybold"
                android:gravity="center"
                android:text="@string/Pre_Booking"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp" />

            <TextView
                android:id="@+id/appversionwallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_11sdp"
                android:text="V 1.0.2"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/prebooking_lays"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F2F2F2"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:src="@drawable/payment_his_icon"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/Pre_Booking"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"></TextView>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/_5sdp"
            android:id="@+id/profile_lays"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:padding="@dimen/_15sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/welcomes"
                    android:layout_width="wrap_content"
                    android:text="@string/Welcome"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sfuidisplayregular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="@dimen/_15sdp"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/lead_name"
                    android:layout_width="wrap_content"
                    android:text="Saravanan"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/sfuidisplayregular"
                    app:layout_constraintStart_toEndOf="@+id/welcomes"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="@dimen/_15sdp"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:id="@+id/lead_id"
                    android:layout_width="@dimen/_66sdp"
                    android:text="@string/Lead_ID"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sfuidisplayregular"
                    app:layout_constraintTop_toBottomOf="@+id/lead_name"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="0207"
                    android:id="@+id/lead_number"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sfuidisplayregular"
                    app:layout_constraintTop_toBottomOf="@+id/lead_name"
                    app:layout_constraintStart_toEndOf="@+id/lead_id"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="wrap_content">

                </TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/_5sdp"
            android:id="@+id/model_lay"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/model_lay_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_15sdp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfuidisplaybold"
                    android:text="Select Your Preferred Model"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/modellist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/textView10" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/model_lay_two"
                android:layout_width="match_parent"
                android:padding="@dimen/_15sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sfuidisplaybold"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/Your_Selected_Model" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/textView11"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/sfuidisplayregular"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/prebookings_textview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/colorgreen"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="@dimen/_10sdp"
                android:text="Pre Booking"
                android:visibility="gone"
                android:fontFamily="@font/sfuidisplayregular"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/prebookings_textviews"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/colorgreen"
            android:fontFamily="@font/sfuidisplayregular"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/Pre_Booking"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/Confirmbutton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/colorgreen"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="Confirm Your Preferenced Model"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>