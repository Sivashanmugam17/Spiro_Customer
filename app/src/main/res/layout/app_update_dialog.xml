<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swap_lay"
    android:background="@drawable/ll_win_bg_splash"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"

            android:layout_height="@dimen/_150sdp">
            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:text="@string/update_app"
                android:textSize="@dimen/_14sdp"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:fontFamily="@font/sfuidisplaymedium"
                android:textColor="@color/spiro_blue"
                android:layout_height="wrap_content"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/description1"
                android:layout_width="wrap_content"
                android:text="@string/update_app_dilog"
                android:textSize="@dimen/_12sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/sfuidisplaymedium"
                android:textColor="@color/colordarkhint"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_17sdp"
            android:layout_width="match_parent"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:text="Cancel"
                android:textSize="@dimen/_12sdp"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:fontFamily="@font/sfuidisplaymedium"
                android:textColor="@color/colorgreen1"
                android:layout_height="wrap_content"/>
            <TextView

                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:text="Update"
                android:textSize="@dimen/_12sdp"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/sfuidisplaymedium"
                android:textColor="@color/colorgreen1"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>