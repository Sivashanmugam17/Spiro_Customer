<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/locationmissingmainok"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorwhite"
   >


    <LinearLayout
        android:id="@+id/backbutton"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:visibility="gone"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="14dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@drawable/ic_close"
            android:backgroundTint="@color/colorblack"
            android:padding="@dimen/_20sdp"
            android:rotation="180" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center"
            android:gravity="bottom"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_gravity="top"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/animation_view_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/locationonscreen" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/locationmissing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/lightshade"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:layout_gravity="center|bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:layout_gravity="center|bottom"
                        android:background="@color/colorwhite"
                        >

                        <LinearLayout
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:src="@drawable/location_search_icon"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_gravity="center|left"
                                        android:gravity="center|left"
                                        android:padding="@dimen/_3sdp"
                                        android:layout_height="@dimen/_30sdp" />

                                    <TextView
                                        android:textSize="@dimen/_16sdp"
                                        android:singleLine="false"
                                        android:textColor="@color/colordarkhint"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center|left"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:text="@string/enable_location_background" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:src="@drawable/location_search_icon"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_gravity="center|left"
                                        android:gravity="center|left"
                                        android:padding="@dimen/_3sdp"
                                        android:layout_height="@dimen/_30sdp" />

                                    <TextView
                                        android:textSize="@dimen/_16sdp"
                                        android:singleLine="false"
                                        android:textColor="@color/colordarkhint"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center|left"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:text="@string/sorrysettings" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:src="@drawable/location_search_icon"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_gravity="center|left"
                                        android:gravity="center|left"
                                        android:padding="@dimen/_3sdp"
                                        android:layout_height="@dimen/_30sdp" />

                                    <TextView
                                        android:textSize="@dimen/_16sdp"
                                        android:singleLine="false"
                                        android:textColor="@color/colordarkhint"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center|left"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:text="@string/enable2" />

                                </LinearLayout>






                            </LinearLayout>




                        </LinearLayout>





                    </LinearLayout>




                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_donelayout"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center|right"
                android:gravity="center"
                android:rotation="180"
                android:background="@null">


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="0dp"
                    android:gravity="center"
                    app:fabCustomSize="@dimen/_45sdp"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    android:onClick="@{() -> viewModel.otppage()}"
                    android:tint="@android:color/white"
                    app:backgroundTint="@color/colorgreen"
                    android:src="@drawable/ic_arrow_back" />




            </LinearLayout>
        </LinearLayout>


    </ScrollView>



</LinearLayout>