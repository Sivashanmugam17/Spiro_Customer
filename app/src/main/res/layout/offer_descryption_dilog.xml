<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swap_lay"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/offer_name"
                android:layout_width="wrap_content"
                android:text=""
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/sfuidisplaymedium"
                android:textColor="@color/colordarkhint"
                android:layout_height="wrap_content">

            </TextView>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_height="@dimen/_200sdp">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/station_images1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:scaleType="fitXY"
                    />
                </androidx.cardview.widget.CardView>




            </LinearLayout>


            <TextView
                android:id="@+id/amount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/sfuidisplaymedium"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:text=""
                android:textColor="@color/colordarkhint"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:text=""
                android:textSize="@dimen/_12sdp"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/sfuidisplaymedium"
                android:textColor="@color/colordarkhint"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/validity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/sfuidisplaymedium"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:text=""
                android:textColor="@color/colordarkhint"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/description1"
                android:layout_width="wrap_content"
                android:text="Chennai City Centre, Doctor Radha Krishnan Salai, Loganathan Colony, Mylapore, Chennai, Tamil Nadu, India"
                android:textSize="@dimen/_12sdp"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/sfuidisplaymedium"
                android:textColor="@color/colordarkhint"
                android:layout_height="wrap_content">

            </TextView>
            <LinearLayout
                android:id="@+id/getdirecation_lay"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#4758A6"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center"
                android:layout_height="@dimen/_40sdp">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:visibility="gone"
                    android:src="@drawable/awesome_directions">
                </ImageView>
                <TextView
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:text="@string/Buy_Now"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/sfuidisplaymedium"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content">
                </TextView>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/close1offer"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center"
                android:layout_height="@dimen/_40sdp">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:visibility="gone"
                    android:src="@drawable/awesome_directions">
                </ImageView>
                <TextView
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:text="@string/Close"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/sfuidisplaymedium"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content">
                </TextView>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </ScrollView>


</LinearLayout>